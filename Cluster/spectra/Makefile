#==============================================================================#
#			   Fortran Compiler/Flags
#		-O0=no optimization,-O3=full optimization
#==============================================================================#
FC=gfortran
FFLAGS=-O2
#FFLAGS= -g -O0 -Wall -Wextra -pedantic -fcheck=all -fbacktrace
#==============================================================================#
#Targets
#==============================================================================#
all: Tip pot mod main runner
#==============================================================================#
Tip:
	$(FC) $(FFLAGS) -c TIP4P.f90
#==============================================================================#
pot:
	$(FC) $(FFLAGS) -c gen_hermite_rule.f90
#==============================================================================#
mod:
	$(FC) $(FFLAGS) -c lmon_qrg_spectra_mod.f90
#==============================================================================#
main:
	$(FC) $(FFLAGS) -c Lmon_QRG_spectra.f90
#==============================================================================#
runner:
	$(FC) $(FFLAGS) TIP4P.o gen_hermite_rule.o lmon_qrg_spectra_mod.o Lmon_QRG_spectra.o -llapack
#==============================================================================#
clean:
	rm -rf *.o *.mod main out a.out

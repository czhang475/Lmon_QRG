#==============================================================================#
#			   Fortran Compiler/Flags
#		-O0=no optimization,-O3=full optimization
#==============================================================================#
FC=gfortran
FFLAGS=-O2
#FFLAGS= -g -O0 -Wall -Wextra -pedantic -fcheck=all -fbacktrace
#==============================================================================#
#Targets
#==============================================================================#
all: Tip int mod grid main
#==============================================================================#
Tip:
	$(FC) $(FFLAGS) -c TIP4P.f90
#==============================================================================#
int:
	$(FC) $(FFLAGS) -c gen_hermite_rule.f90
#==============================================================================#
mod:
	$(FC) $(FFLAGS) -c monomer_spectra_module.f90
#==============================================================================#
grid:
	$(FC) $(FFLAGS) -c monomer_spectra.f90
#==============================================================================#
main:
	$(FC) $(FFLAGS) gen_hermite_rule.o TIP4P.o monomer_spectra_module.o monomer_spectra.o -llapack
#==============================================================================#
clean:
	rm -rf *.o *.mod main out a.out
